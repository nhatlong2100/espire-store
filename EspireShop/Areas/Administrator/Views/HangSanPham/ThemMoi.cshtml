@model Database.EF.tbl_ProductCatalog

@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Areas/Administrator/Views/Shared/_layout.cshtml";
}

@section TitlePage{
    Thêm mới hãng sản phẩm
}

<div class="card">
    <div class="card-block">
        <h4>Thêm mới</h4>

        @using (Html.BeginForm("ThemMoi","HangSanPham",FormMethod.Post,new { @autocomplete="off"}))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group row">
                    @Html.LabelFor(model => model.ProductTypeID, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.ProductTypeID, ViewBag.ListTypeProduct as SelectList, "Chọn loại sản phẩm", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProductTypeID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.CatalogProductName, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.CatalogProductName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CatalogProductName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" value="Thêm mới" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

