
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Areas/Administrator/Views/Shared/_layout.cshtml";
}

@section TitlePage{ 
    Thay đổi mật khẩu người dùng
}

<div class="card">
    <div class="card-block">
        <h4 class="card-title">Thay đổi mật khẩu</h4>
        @using (Html.BeginForm("DoiMatKhau", "NhanVien", FormMethod.Post, new { autocomplete = "off" }))
        {
            <form class="form-horizontal mrg-top-40 pdd-right-30">
                <div class="form-group row">
                    <label for="form-1-1" class="col-md-2 control-label">Mã người dùng: </label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="UserID" name="UserID"  value="@ViewBag.UserID" disabled="disabled">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="form-1-2" class="col-md-2 control-label">Mật khẩu hiện tại</label>
                    <div class="col-md-10">
                        <input type="password" class="form-control" id="OldPass" name="OldPass" placeholder="Password">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="form-1-2" class="col-md-2 control-label">Mật khẩu mới</label>
                    <div class="col-md-10">
                        <input type="password" class="form-control" id="NewPass" name="NewPass" placeholder="Password">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="form-1-2" class="col-md-2 control-label">Xác nhận mật khẩu mới</label>
                    <div class="col-md-10">
                        <input type="password" class="form-control" id="ReNewPass" name="ReNewPass" placeholder="Password">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Cập nhật" class="btn btn-outline-success" />
                        <a href="/Administrator" class="btn btn-outline-secondary">Quay lại</a>
                    </div>
                </div>
            </form>
        }
    </div>
</div>